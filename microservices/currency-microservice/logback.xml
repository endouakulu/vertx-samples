<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender" level="INFO">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg</pattern>
        </encoder>
    </appender>

    <logger name="io.vertx" level="INFO">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.endouakulu.microservice.currency" level="ERROR">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="io.netty.util.internal.PlatformDependent" level="ERROR">
        <appender-ref ref="STDOUT" />
    </logger>
    <root level="INFO">
    </root>
</configuration>